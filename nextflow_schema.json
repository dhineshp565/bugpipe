                        "r941_sup_plant_variant_g610"
                    ]
                },
                "gsize": {
                    "type": "string",
                    "default": "auto",
                    "description": "Enter the estimated genome size. For example, a genome size of 3.5Mb should be entered as 3.5M, 3.5Gb as 3.5G, and 3.5Kb as 3.5k."
                },
                 "lineage": {
                    "type": "string",
                    "default": "bacteria_odb10",
                    "description": "Select the appropriate lineage for busco genome completeness estimation",
                    "enum": [
                        "bacteria_odb10",
                        "fungi_odb10",
                        "archaea_odb10",
                        "eukaryota_odb10",
                        "mammalia_odb10",
                        "insecta_odb10"

                      
                    ]
                }

            }
        }
    },
    "allOf": [
        {
            "$ref": "#/definitions/input_output_options"
        },
        {
            "$ref": "#/definitions/optional"
        }
    ]
}