                        "r941_e81_hac_g514",
                        "r941_e81_hac_variant_g514",
                        "r941_e81_sup_g514",
                        "r941_e81_sup_variant_g514",
                        "r941_min_fast_g507",
                        "r941_min_fast_snp_g507",
                        "r941_min_fast_variant_g507",
                        "r941_min_hac_g507",
                        "r941_min_hac_snp_g507",
                        "r941_min_hac_variant_g507",
