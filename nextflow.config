manifest {
	homePage = 'https://github.com/dhineshp565/bugpipe'
   	description = 'Pipeline for whole genome assembly and analysis of bacterial isolates'
	author= 'dhineshp565'
   	mainScript = 'main.nf'
   	version = 'v1.0.0'
	nextflowVersion= '>=22.12.0-edge'
	manifest.defaultBranch = "main"
	name = 'bugpipe'
}


params {

    // Options: Mandatory
	input='filepath'
    out_dir= 'Results'	
	trim_barcodes= null
	medaka_model= 'bacteria'
	gsize='auto'
	lineage= 'bacteria_odb10'
	 
}


profiles {
	standard{
		docker {
			includeConfig 'config/docker.config'
			docker.enabled=true
		}
	}
}


process {
	withLabel:low {
		cpus= 2
	 	memory= 4.GB
	 	time= 2.h
	 }
	 withLabel:medium {
	 	cpus= 8.0
	 	memory= 9.GB
		time= 4.h
	 }
	 withLabel:high {
	 	cpus=9.0
	 	memory=16.GB
	 	time= 8.h
	 }
}
timeline {
  enabled = true
  overwrite = true
  file = "${params.out_dir}/execution/timeline.html"
}
report {
  enabled = true
  overwrite = true
  file = "${params.out_dir}/execution/report.html"
}
trace {
  enabled = true
  overwrite = true
  file = "${params.out_dir}/execution/trace.txt"
}
